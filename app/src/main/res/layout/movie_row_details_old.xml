<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_Poster"
        android:layout_width="match_parent"
        android:layout_height="246dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="-3dp"
        android:adjustViewBounds="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/avengersorder5"
        tools:layout_editor_absoluteX="-4dp" />


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="379dp"
        android:layout_height="64dp"
        android:scaleType="centerCrop"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/blackbgground"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="182dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.454" />

    <TextView
        android:id="@+id/txt_movie_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Movie Title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        tools:textColor="#ffffff" />

    <TextView
        android:id="@+id/txt_movie_tagline"
        android:layout_width="264dp"
        android:layout_height="22dp"
        android:text="Movie Tag Line"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        android:layout_marginTop="34dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:textColor="#ffffff"/>

    <TextView
        android:id="@+id/txt_movie_genre"
        android:layout_width="123dp"
        android:layout_height="24dp"
        android:text="Movie Genre"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/txt_movie_overview"
        android:layout_width="362dp"
        android:layout_height="30dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="48dp"
        android:text="overview"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/txtYear"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_marginLeft="-4dp"
        android:layout_marginTop="7dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="@+id/txt_movie_overview"
        app:layout_constraintTop_toBottomOf="@+id/txt_movie_overview" />

    <TextView
        android:id="@+id/movie_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/txtYear"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtYear" />
</android.support.constraint.ConstraintLayout>